<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<guarana-config>

    <threads>50</threads>

    <logging>
	    <file>guarana.log</file>
	    <append>false</append>
	    <suppress-console-output>true</suppress-console-output>
	    <level>all</level>
	    <output-format>simple</output-format>
	    <subsystem>guarana</subsystem>
    </logging>

    <monitoring>        

        <work-queue enabled="false">        
            <file>./stats/work-queue-stats.txt</file>
            <interval>2000</interval>
        </work-queue>

        <workers enabled="true">        
            <file>./stats/workers-stats.txt</file>
            <interval>2000</interval>
        </workers>

        <memory enabled="true">        
            <file>./stats/memory-stats.txt</file>
            <interval>2000</interval>
        </memory>

    </monitoring>

</guarana-config>
